<hr class="govuk-section-break govuk-section-break--visible govuk-section-break--xl govuk-!-margin-top-0">
<h2 class="govuk-heading-l" id="posts">Posts</h2>
<div class="govuk-grid-row">
{% set columns = cycler("1", "2") %}
{% for post in collections.post | reverse %}
  <article class="govuk-grid-column-one-half-from-desktop govuk-!-margin-bottom-4">
    <h3 class="govuk-heading-m govuk-!-margin-bottom-2">
      <a class="govuk-link" href="{{ post.url }}">{{ post.data.title | markdown("inline") }}</a>
    </h3>
    <p class="govuk-body">{{ post.data.description | markdown("inline") }}</p>
  </article>
  {% if columns.next() == "2" %}</div><div class="govuk-grid-row">{% endif %}
{% endfor %}
</div>
